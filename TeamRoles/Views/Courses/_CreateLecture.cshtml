@model TeamRoles.Models.Lecture

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Assignment">Create Lecture</button>


<!-- Modal -->
<div class="modal fade" id="Assignment" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body align-content-center">
                @using (Html.BeginForm("Create", "Lectures", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.Hidden("CourseId")

                    <form>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">

                            <h5>@Html.LabelFor(model => model.LectureName)</h5>
                            <div class="col-md-12 padding-bottom-20">
                                @Html.EditorFor(model => model.LectureName)
                                @Html.ValidationMessageFor(model => model.LectureName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            <h5>@Html.LabelFor(model => model.Filename)</h5>

                            <div class="col-md-12 padding-bottom-20">
                                <input type="file" name="LectureFile" id="LectureFile" required />
                                @Html.ValidationMessageFor(model => model.Filename, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            <h5> @Html.LabelFor(model => model.PostDate) </h5>

                            <div class="col-md-12 padding-bottom-20">
                                <input type="date" name="PostDate" id="PostDate">
                            </div>
                        </div>

                        <div class="col-md-12">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>


