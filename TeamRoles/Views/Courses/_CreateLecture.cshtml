@model TeamRoles.Models.Lecture
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Assignment">Create a Lecture</button>

<!-- Modal -->
<div class="modal fade" id="Assignment" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Lectures", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.Hidden("CourseId")

                    <form>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.LectureName)
                            <div class="col-md-12 padding-bottom-20">
                                @Html.EditorFor(model => model.LectureName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LectureName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Filename)
                            <div class="col-md-12 padding-bottom-20">
                                <input type="file" name="LectureFile" id="LectureFile" required />
                                @Html.ValidationMessageFor(model => model.Filename, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PostDate)
                            <div class="col-md-12 padding-bottom-20">
                                <input type="date" name="PostDate" id="PostDate">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

