@using Microsoft.AspNet.Identity;
@using TeamRoles.Models.Extensions;
@using TeamRoles.Models;
@model IEnumerable<TeamRoles.Models.RequestViewModel>

<h1> AYTO EDW TI EINAI !!!??!?1/!??!?!</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12 padding-top-20">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Options</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count() != 0)
                    {
                        foreach (var req in Model)
                        {

                            <tr class="table-active">
                                <td>@req.ReqId</td>
                                <td>@req.User1.UserName</td>
                                <td>@req.User2.UserName</td>
                                <td>
                                    <a href="@Url.Action("AcceptRequest", "Home", new {id = req.ReqId})"><i class="fas fa-check fa-2x"></i></a>
                                    <a href="@Url.Action("DeclineRequest", "Home", new {id = req.ReqId})"><i class="fas fa-ban fa-2x"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="table-danger">
                            <td></td>
                            <td>You have no Request!</td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@if (Model != null)
{
    foreach (var req in Model)
    {
        <div class="row">
            <div class="col-md-4">
            </div>

            <div class="col-md-4">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td>
                                @req.User1.UserName
                            </td>
                            <td>
                                @req.User2.UserName
                            </td>
                            <td>
                                @req.Course.CourseName
                            </td>
                            <td>
                                @Html.ActionLink("Accept", "AcceptRequest", "Home", new { id = req.ReqId }, null)
                            </td>
                            <td>
                                @Html.ActionLink("Decline", "DeclineRequest", "Home", new { id = req.ReqId }, null)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-md-4">
        </div>

        <div class="col-md-4">
            <h2>
                There are no requests
            </h2>
        </div>
    </div>
}


