@using Microsoft.AspNet.Identity
@using TeamRoles.Models.Extensions
@model IEnumerable<TeamRoles.Models.ApplicationUser>

<div class="container"></div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProfilePic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Users/@item.UserName/@Url.Content(item.ProfilePic)" width="100" height="100"/>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success"})
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary"})
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure, do you want to delete this ?');" })
            </td>
        </tr>
    }

</table>

