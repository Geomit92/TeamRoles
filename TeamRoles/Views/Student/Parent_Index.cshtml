@model IEnumerable<TeamRoles.Models.ApplicationUser>
@{
    ViewBag.Title = "Parent_Index";
}

@if (Model.Count() != 0)
{
<h2>Parent_Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProfilePic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Users/@item.UserName/@Url.Content(item.ProfilePic)" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("View Student Details", "Details", "Student", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "DeleteFromChild", new { id = item.Id })
            </td>
        </tr>
    }

</table>
}
else
{
    <h2>You have no connected children yet</h2>
}


