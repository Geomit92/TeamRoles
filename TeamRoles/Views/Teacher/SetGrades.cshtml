@model TeamRoles.Models.SetGradeViewModel
@{
    ViewBag.Title = "Grades";
}

@using (Html.BeginForm("SetGrades", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Set Grade.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.DisplayFor(m => m.CourseName, new { @class = "col-md-2 control-label" })
        @Html.HiddenFor(model => model.CourseName)
        @Html.DisplayFor(m => m.TeacherName, new { @class = "col-md-2 control-label" })
        @Html.HiddenFor(model => model.TeacherName)
        @Html.DisplayFor(m => m.StudentName, new { @class = "col-md-2 control-label" })
        @Html.HiddenFor(model => model.StudentName)
        @Html.LabelFor(m => m.NumericGrade, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NumericGrade, new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.Absences, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Absences, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

