@using Microsoft.AspNet.Identity
@using TeamRoles.Controllers
@using TeamRoles.Models.Extensions
@model IEnumerable<TeamRoles.Models.ApplicationUser>


    <div class="container">

        <div class="row">

            <div class="col-lg-12">

                <h2 class="page-header">TEACHERS</h2>
                
                @using (Html.BeginForm("Index", "Teacher", FormMethod.Get))
                {
                    @Html.TextBox("searching")
                    <input type="submit" value="Search" />
                }
            </div>
        </div>

        <div class="row">

            @if (Model.Count() != 0)
            {
                <div class="card-deck ">
                    @foreach (var item in Model)
                    {
                        <div class="txt-center">
                            <div class="card" style="width: 250px; height: 450px; padding: 15px; margin: 15px">

                                <img src="~/Users/@item.UserName/@item.ProfilePic" class="card-img-top" height="200" width="200" style="object-fit: contain" alt="...">

                                <div class="card-body">

                                    <h5 class="card-title">@item.UserName </h5>

                                    <p class="card-text">@item.Email </p>

                                </div>
                                <div class="card-footer">

                                    <a href="/Courses/Index_ToSelect/@item.Id"><i class="fas fa-book fa-2x"></i></a>
                                    
                                </div>
                            </div>
                        </div>

                    }
                </div>
            }
            else
            {
                <h2> There are no Teachers in the platform ... </h2>
            }

        </div>

        <a href="/Home/Index"><i class="fas fa-chevron-left"></i> Back to Home </a>
    </div>

        